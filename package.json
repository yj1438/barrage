{
  "name": "@alipay/luna-barrage",
  "version": "0.0.1",
  "author": "yj138290",
  "description": "弹幕组件",
  "keywords": [
    "支付宝",
    "luna",
    "弹幕"
  ],
  "repository": {
    "type": "git",
    "url": "git@gitlab.alipay-inc.com:luna-component/luna-barrage.git"
  },
  "main": "src/index.js",
  "files": [
    "dist",
    "src",
    "demo",
    "tests"
  ],
  "scripts": {
    "dev": "webpack-dev-server --devtool source-map --inline --hot --open --host 0.0.0.0",
    "build": "webpack --progress --colors",
    "doc": "rm -rf docs && jsdoc README.md src -r -d docs -t node_modules/docdash",
    "qtdeploy": "qtdeploy all",
    "lint": "eslint src/**",
    "test": "mocha ./tests --recursive --require ./tests/setup.js",
    "test-cov": "istanbul cover _mocha -- ./tests --recursive --require ./tests/setup.js",
    "ci": "npm run lint && npm run test-cov",
    "preversion": "npm run ci",
    "postversion": "git push && git push --tags",
    "prepublish": "npm run ci && npm run build"
  },
  "devDependencies": {
    "@alipay/qingting-deploy": "^0.3.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "~3.5.0",
    "docdash": "^0.4.0",
    "eslint": "^4.5.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "istanbul": "~0.4.5",
    "jsdoc": "~3.4.2",
    "jsdom": "~9.5.0",
    "mocha": "~3.1.0",
    "sinon": "~1.17.6",
    "sinon-chai": "~2.8.0",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-merge": "~0.15.0"
  },
  "publishConfig": {
    "registry": "http://registry.npm.alibaba-inc.com"
  }
}
